{
    "manifest_version": 3,
    "name": "Quick Dictionary",
    "version": "1.2",
    "description": "Quickly check word definitions with pronunciation directly on the webpage; inspired by the built-in macOS dictionary",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
    "https://api.dictionaryapi.dev/*",
    "*://*/*"
    ],
    "icons": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "web_accessible_resources": [
    {
      "resources": ["speaker.svg", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
  }
